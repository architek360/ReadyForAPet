<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <Button
        android:id="@+id/continuegame"
        android:layout_width="200dp"
       android:layout_height="50dp"
        android:layout_above="@+id/createnewpet"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Continue game"
        android:background="@drawable/buttonshape"
          />

    <Button
        android:id="@+id/createnewpet"
        android:layout_width="200dp"
     android:layout_height="50dp"
        android:layout_alignLeft="@+id/continuegame"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="Create new pet" 
        android:background="@drawable/buttonshape"
         />

    <Button
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/continuegame"
        android:layout_alignLeft="@+id/continuegame"
        android:layout_marginBottom="50dp"
        android:text="No" />

    <Button
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/no"
        android:layout_alignBottom="@+id/no"
        android:layout_alignRight="@+id/continuegame"
        android:text="Yes" />

    <TextView
        android:id="@+id/warningmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/no"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />
    
        <ImageView
        android:id="@+id/dogpicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/continuegame"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:src="@drawable/doghappy" />

</RelativeLayout>