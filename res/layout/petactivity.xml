<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background" >
  
    <TextView
        android:id="@+id/petgreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="TextView" />


    <ProgressBar
        android:id="@+id/moodbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/petgreeting"
        android:layout_centerHorizontal="true"
        android:max="20" />

    	 <TextView
    	     android:id="@+id/pet_response"
    	     android:layout_width="wrap_content"
    	     android:layout_height="wrap_content"
    	     android:layout_below="@+id/moodbar"
    	     android:layout_centerHorizontal="true"
    	     android:layout_marginTop="15dp"
    	     android:text="I am full" />

    	 <Button
    	     android:id="@+id/eat"
    	     android:layout_width="wrap_content"
    	     android:layout_height="wrap_content"
    	     android:layout_alignParentLeft="true"
    	     android:layout_below="@+id/pet_response"
    	     android:layout_marginLeft="18dp"
    	     android:text="Eat" />

    	 <Button
    	     android:id="@+id/play"
    	     android:layout_width="wrap_content"
    	     android:layout_height="wrap_content"
    	     android:layout_alignBaseline="@+id/eat"
    	     android:layout_alignBottom="@+id/eat"
    	     android:layout_alignRight="@+id/moodbar"
    	     android:text="Play" />

</RelativeLayout>