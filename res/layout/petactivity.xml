<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background" >
  
    <TextView
        android:id="@+id/petresponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#000000"
        android:textStyle="bold" android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/moodbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:max="15" />

    	 <Button
    	     android:id="@+id/walk"
    	     android:layout_width="wrap_content"
    	     android:layout_height="wrap_content"
    	     android:layout_alignParentBottom="true"
    	     android:layout_alignParentLeft="true"
    	     android:background="@drawable/buttonshape"
    	     android:text="@string/walk" />

    	 <Button
    	     android:id="@+id/eat"
    	     android:layout_width="wrap_content"
    	     android:layout_height="wrap_content"
    	     android:layout_alignParentLeft="true"
    	     android:layout_marginTop="36dp"
    	     android:background="@drawable/buttonshape"
    	     android:text="@string/eat" />

    	 <Button
    	     android:id="@+id/play"
    	     android:layout_width="wrap_content"
    	     android:layout_height="wrap_content"
    	     android:layout_alignBaseline="@+id/eat"
    	     android:layout_alignBottom="@+id/eat"
    	     android:layout_alignParentRight="true"
    	     android:background="@drawable/buttonshape"
    	     android:text="@string/play" />

    	 <ImageView
    	     android:id="@+id/dogpicture"
    	     android:layout_width="400dp"
    	     android:layout_height="400dp"
    	     android:layout_alignParentBottom="true"
    	     android:layout_alignParentLeft="true"
    	      />


    	 <ImageView
    	     android:id="@+id/dogbiscuit"
    	     android:layout_width="100dp"
    	     android:layout_height="100dp"
    	     android:layout_above="@+id/walk"
    	     android:layout_centerHorizontal="true"
    	     android:src="@drawable/dogbiscuit5" />


</RelativeLayout>