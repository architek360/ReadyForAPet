<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlayActivity" 
    android:background="@drawable/background" 
    android:id="@+id/PlayView" >"
    

    <ImageView
        android:id="@+id/dogbody"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
         />
    <ImageView
        android:id="@+id/welcomedog"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/dogdance3"
         />

    <Button
        android:id="@+id/dogplay"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Play"
        android:textSize="12sp"
        android:background="@drawable/buttonshape" />

    <Button
        android:id="@+id/usestandard"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/takephoto"
        android:layout_alignParentTop="true"
        android:text="Use standard photo!" 
        android:textSize="12sp"
        android:background="@drawable/buttonshape"/>

    <ImageView
        android:id="@+id/dogface"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="57dp"
          android:layout_marginTop="110dp"
        android:src="@drawable/dogdance3" />

    <Button
        android:id="@+id/takephoto"
        android:layout_width="200dp"
         android:layout_height="50dp"
        android:layout_below="@+id/usestandard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:textSize="12sp"
        android:text="Take a photo of your dogs face!" />

</RelativeLayout>